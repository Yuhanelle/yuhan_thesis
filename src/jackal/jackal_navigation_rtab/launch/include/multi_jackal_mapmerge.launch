<launch>
  <arg name="move_forward_only" default="false"/>
  
  <!-- define for the jackal environment -->
  <arg name="j1"  default="jackal1"/>
  <arg name="j2" default="jackal2"/>
  <!-- <arg name="j3"  default="jackal3"/> -->
  
  <arg name="j1_x_pos" default="5.0"/>
  <arg name="j1_y_pos" default="0.0"/>
  <arg name="j1_z_pos" default="0.0"/>
  <arg name="j1_yaw"   default="0.0"/>

  <arg name="j2_x_pos" default="0.0"/>
  <arg name="j2_y_pos" default="3.0"/>
  <arg name="j2_z_pos" default="0.0"/>
  <arg name="j2_yaw"   default="-1.57"/>


  <!-- Map megring (know inital position case)-->
  <group ns="/jackal1/map_merge">
    <param name="init_pose_x" value="$(arg j1_x_pos)"/>
    <param name="init_pose_y" value="$(arg j1_y_pos)"/>
    <param name="init_pose_z" value="$(arg j1_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg j1_yaw)"/>
  </group>

  <group ns="/jackal2/map_merge">
    <param name="init_pose_x" value="$(arg j2_x_pos)"/>
    <param name="init_pose_y" value="$(arg j2_y_pos)"/>
    <param name="init_pose_z" value="$(arg j2_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg j2_yaw)"/>
  </group>

    <!-- Launch the map_merge node along with transform publishers -->
  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_namespace" value=""/>
    <param name="merged_map_topic" value="map"/>
    <!-- <param name="world_frame" value="world"/> -->
    <param name="world_frame" value="map"/>
    <param name="known_init_poses" value="true"/>
    <param name="merging_rate" value="5.0"/>
    <param name="discovery_rate" value="0.1"/>
    <param name="estimation_rate" value="1.0"/>
    <param name="estimation_confidence" value="1.0"/>
  </node>

  <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_mergedmap_tf_broadcaster"  args="0 0 0 0 0 0 /world /map 100"/> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_mergedmap_tf_broadcaster"  args="-5.885 -6.585 0 0 0 0 world map 100"/> -->

  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg j1)_tf_broadcaster"  args="$(arg j1_x_pos) $(arg j1_y_pos) $(arg j1_z_pos) $(arg j1_yaw) 0 0 /map /$(arg j1)/map 100"/>
  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg j2)_tf_broadcaster" args="$(arg j2_x_pos) $(arg j2_y_pos) $(arg j2_z_pos) $(arg j2_yaw) 0 0 /map /$(arg j2)/map 100"/>


  <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg j1)_tf_broadcaster"  args="0 0 0 0 0 0 /map /$(arg j1)/map 100"/>
  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg j2)_tf_broadcaster" args="0 0 0 0 0 0 /map /$(arg j2)/map 100"/> -->
</launch>